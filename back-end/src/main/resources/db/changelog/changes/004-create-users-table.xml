<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="004-01" author="sistema-formazione">
        <comment>Create Utenti table</comment>

        <createTable tableName="utenti">
            <column name="username" type="VARCHAR(50)">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="email" type="VARCHAR(150)">
                <constraints nullable="true" unique="true" />
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="attivo" type="VARCHAR(10)" defaultValue="Si">
                <constraints nullable="false" />
            </column>
            <column name="ruoli" type="VARCHAR(500)">
                <constraints nullable="true" />
            </column>
            <column name="data_creazione" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false" />
            </column>
            <column name="data_modifica" type="TIMESTAMP">
                <constraints nullable="true" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="004-02" author="sistema-formazione">
        <comment>Insert initial user data with encrypted password</comment>

        <!-- Insert additional admin user for testing -->
        <insert tableName="utenti">
            <column name="username" value="l.manconi" />
            <column name="email" value="admin@proximagroup.eu" />
            <!-- BCrypt hash of "admin123" with salt rounds 10 -->
            <column name="password"
                value="$2a$10$SAFTjDJLm1kN6KaDpBjc.eZWGKdRcFW/eBt5WR.ciDDWkYZj2.69." />
            <column name="attivo" value="Si" />
            <column name="ruoli" value="ADMIN,SUPER_USER" />
            <column name="data_creazione" valueComputed="CURRENT_TIMESTAMP" />
        </insert>
    </changeSet>

    <changeSet id="004-03" author="sistema-formazione">
        <comment>Create indexes for utenti table performance</comment>

        <createIndex tableName="utenti" indexName="idx_utenti_email">
            <column name="email" />
        </createIndex>

        <createIndex tableName="utenti" indexName="idx_utenti_attivo">
            <column name="attivo" />
        </createIndex>
    </changeSet>

</databaseChangeLog> 