<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="007-add-processed-flag-to-learning-data" author="data-processor">
        <comment>Add processed flag to learning_data table for ETL processing status</comment>

        <addColumn tableName="learning_data">
            <column name="processed" type="BOOLEAN" defaultValue="false">
                <constraints nullable="false" />
            </column>
        </addColumn>

        <!-- Add index for processed flag for better query performance -->
        <createIndex tableName="learning_data" indexName="idx_learning_data_processed">
            <column name="processed" />
        </createIndex>
    </changeSet>

</databaseChangeLog> 